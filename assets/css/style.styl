/*--  pageIntro  --------------------------------------------*/
.pageIntro {
	opacity: 1 !important;
	position: fixed;
	top: 0;
	background-color: #fff;
	z-index: 9999;
	width:100%;
	height:100%;
	div {
		text-align: center;
		width:100%;
		height:100%;
		img {
			display: none;
			margin-top: 15px;
			width: 140px;
			height: 31px;
		}
		.goTop {
			display: none;
			border-top: 1px solid $borderColor;
			border-bottom: 1px solid $borderColor;
			padding: 10px;
			margin: 30px 0 0;
			cursor: pointer;

		}
	}
}

canvas{
	display: block;
	margin: 0 auto;
}
