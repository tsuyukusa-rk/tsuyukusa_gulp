/*
* overlay
*/

#overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    background-color: #000000;
    background-size: cover;
    width: 100%;
    height: 100%;
    opacity: 0.7;
}

/*
* modalPoetry
*/

#modalPoetry {
    opacity: 0;
    position: fixed;
    top: 15%;
    left: 25%;
    width: 50%;
    height: 70%;
    background-color: #ffffff;
    box-shadow: 0px 1px 5px #000000;
    box-sizing: border-box;
    padding: 32px 25px 25px;
    .modalPoetryContents {
        overflow-y: scroll;
        overflow-x: hidden;
        height: 100%;
        position: relative;
        > li {
            position: absolute;
            > dl {
                dt {
                    font-size: 16px;
                    padding: 0 0 15px;
                }
                dd {
                    font-size: 12px;
                }
            }
        }
    }
    .modalPoetryClose {
        position: absolute;
        top: 0px;
        left: 5px;
        cursor: pointer;
        transition: all 0.5s ease;
        -webkit-transition: all 0.5s ease;
        img {
            width: 15px;
        }
        &:hover {
            transform: scale(1.3);
            -webkit-transform: scale(1.3);
        }
    }
    .modalPoetryCtrl {
        > li {
            position: absolute;
            top: 40%;
            cursor: pointer;
            &.modalPoetryCtrlLeft {
                left: -10%;
            }
            &.modalPoetryCtrlRight {
                right: -10%;
            }
            img {
                width: 50px;
            }
        }
    }
}

// 640px以下のレイアウト
@media screen and (max-width: 640px) {

    #modalPoetry {
        top: 10%;
        left: 10%;
        width: 80%;
        height: 80%;
        padding: 32px 3% 25px;
        .modalPoetryClose {
            top: 5px;
            img {
                width: 20px;
            }
        }
        .modalPoetryCtrl {
            > li {
                &.modalPoetryCtrlLeft {
                    left: -14%;
                }
                &.modalPoetryCtrlRight {
                    right: -14%;
                }
            }
        }
    }

}
