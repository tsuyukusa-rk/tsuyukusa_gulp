.header {
    clear: both;
    margin: 20px 0;
    overflow: hidden;
    width: 100%;
    height: 275px;
}
.headerVideo {
    position: absolute;
    top: 0;
    left: 0;
    margin: 0 auto;
    width: 100%;
    height: 295px;
    z-index: -100;
    overflow: hidden;
    opacity: 0.3;
    video {
        width: 1600px;
        margin: -20px 0 0 -20px;
    }
}
.headLeft {
    float: left;
    width: 560px;
    h1 {
        font-size: 12px;
        color: $borderColorDark;
        margin: 85px 0 0;
        img {
            width: 180px;
        }
        p {
            width: 400px;
            padding: 20px 0 0;
            line-height: 24px;
        }
    }
}
.headRight{
    float: left;
    width: 400px;
    margin: 0 0 30px;
    img {
        width: 400px;
    }
}
