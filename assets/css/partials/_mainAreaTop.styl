.mainAreaTop{
	clear: both;
	margin: 30px 0 0;
	height: 550px;
	> ul{
		clear: both;
		li{
			width: 285px;
			height: 560px;
			float: left;
			border-right: 1px solid $borderColor;
			padding: 0 20px;
			overflow:hidden;
			width: 285px;
			&:first-child{
				width: 285px;
				float: left;
				border-right: 1px solid $borderColor;
				padding: 0 20px 0 0px;
			}
			&:last-child{
				width: 305px;
				float: left;
				padding: 0 0px 0 20px;
				border-right: none;
			}
			h3{
				color: #fff;
				font-size: 16px;
				margin: 0 0 15px;
				font-weight: bold;
				background: #888;
				padding: 5px 0 4px 10px;
				border-radius: 4px;
				text-shadow: 1px 2px 2px #888;
				span {
					font-size: 10px;
					padding: 0 5px 0 0;
				}
			}
		}
		> dl{
			font-size: 13px;
			margin: 0 0 0 10px;
			display: block;
		}
		dl{
			font-size: 13px;
			margin: 10px 0 0 10px;
			dt{
				span{
					font-weight: bold;
					color: #666;
				}
			}
			dd{
				margin: 5px 0 10px;
				padding: 0 0 10px;
				border-bottom: 1px dotted $borderColor;
				span{
					font-weight: bold;
					color: #666;
				}
			}
		}
		.biography dl{
			border-bottom: none;
		}
	}
	.liveScheduleTxt,.informationTxt{
		padding-left: 15px;
	}
	.biographyImg img{
		width: 280px;
		margin: 15px 0 0 -15px;
		border-bottom: none;
	}
}

.displayNone{
	display: none;
}