@charset "UTF-8";
.blogWrap {
    background-color: #e0e0e0;
    overflow: hidden;
    .blogContentsArea {
        width: 960px;
        margin: 0 auto 0;
        padding: 80px 0;
        overflow: hidden;
        .blogSideArea {
            float: left;
            width: 320px;
            li {
                width: 275px;
                background: #fff;
                padding: 15px;
                margin: 30px 15px 0 0;
                &:first-child {
                    margin: 0 15px 0 0;
                }
                dl {
                    dt {
                        font-size: 16px;
                        margin: 0 0 12px 0;
                        border-bottom: 1px solid #888;
                        font-weight: bold;
                    }
                    dd {
                        margin: 10px 0 0;
                        line-height: 1.0;
                    }
                }
            }
        }
        .blogMainContentsArea{
            width: 640px;
            float: left;
            li {
                width: 585px;
                background: #fff;
                padding: 30px 20px;
                margin: 30px 0 0 15px;
                &:first-child {
                    margin: 0 0 0 15px;
                }
                dl {
                    dt {
                        font-size: 24px;
                        color: #333;
                        font-weight: bold;
                        line-height: 1.2;
                        margin: 0 0 35px;
                        position: relative;
                        span {
                            font-size: 12px;
                            position: relative;
                            top: -5px;
                            color: #888;
                        }
                    }
                    dd {
                        img {
                            margin: 15px 0 20px;
                            max-width: 600px;
                        }
                    }
                }
            }
        }
    }
}

.floatMenu {
    width: 100%;
    height: 40px;
    background-color: #fff;
    opacity: 0.9;
    position: fixed;
    top: 0;
    > div {
        width: 960px;
        overflow: hidden;
        margin: 6px auto 0;
        height: 40px;
        position: relative;
        h1 {
            width: 100px;
            float: left;
            border: none;
            cursor: pointer;
            img {
                width: 100px;
            }
        }
        .floatMenuIcon {
            float: right;
            margin: 3px 0 0;
            cursor: pointer;
        }
        ul {
            position: absolute;
            top: 40px;
            right: 0;
        }
    }
}
