/*
* commons
*/

// transform
transformFn(num) {
    -webkit-transform: scale(num);
    transform: scale(num);
    transition: all .4s;
}

/*
* style
*/

// container
.mainAreaTop {
    clearfix();
    overflow: hidden;
}

// culmn
.mainAreaTopLeft {
    width: 639px;
    height: 386px;
    float: left;
    border-right: 1px solid $borderColor;
}
.mainAreaTopRight {
    width: 280px;
    float: left;
    padding: 20px;
    img {
        max-width: 280px;
    }
}

// デティール
.tabTitles {
    clearfix();
    border-bottom: 1px solid $borderColor;
    li {
        float: left;
        width: 212px;
        height: 35px;
        border-right: 1px solid $borderColor;
        text-align: center;
        font-size: 16px;
        padding: 10px 0 0;
        cursor: pointer;
        position: relative;
        &:first-child {
            width: 213px;
        }
        &:last-child {
            border-right: none;
        }
        &:after {
            content: "";
            position: absolute;
            z-index: -1;
            display: block;
            top: 0%;
            left: 0%;
            width: 100%;
            height: 100%;
            transformFn(.5);
        }
        &:hover {
            color: #fff;
        }
        &:hover:after {
            background: mainColor;
            transformFn(1);
        }
        &.active {
            color: #fff;
            cursor: default;
            &:after {
                @extend .tabTitles li:after
                @extend .tabTitles li:hover:after
            }
        }
        &.tabDisabled:hover {
            cursor: default;
            color: #777777;
            &:after {
                display: none;
            }
        }
    }
}
.tabContents {
    .tabContentsLi {
        width: 580px;
        height: 300px;
        padding: 20px 30px;
    }
    .liveSchedule {
        overflow-y: scroll;
        ul {
            li {
                margin: 20px 0 0;
                &:first-child {
                    margin: 0;
                }
                > dl {
                    dt {
                        span {
                            font-weight: 300;
                        }
                    }
                }
            }
        }
    }
    .biography {
        display: none;
        dl {
            dd {
                margin: 10px 0 0;
            }
        }
    }
}

// 960px以下のレイアウト
@media screen and (max-width: 960px) {

    .mainAreaTopLeft {
        width: 100%;
        float: none;
        border-right: none;
    }
    .mainAreaTopRight {
        display: none;
    }

}

// 640px以下のレイアウト
@media screen and (max-width: 640px) {

    .tabTitles {
        display: table;
        li {
            float: none;
            box-sizing: border-box;
            padding: 10px 2%;
            width: 33%;
            display: table-cell;
            height: 100%;
            word-break: break-all;
            min-height: 68px;
            &:first-child {
                width: 33%;
            }
        }
    }

    .tabContents {
        .tabContentsLi {
            width: 92%;
            height: 300px;
            padding: 20px 4%;
        }
    }

}
